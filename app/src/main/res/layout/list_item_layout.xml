<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="weather"
            type="com.example.weather.helper.WeatherDataClass" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Temprature_textview"
            android:layout_width="81dp"
            android:layout_height="37dp"
            android:layout_marginStart="24dp"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="24sp"
            app:Temprature="@{weather}"
            app:layout_constraintBottom_toTopOf="@+id/Date_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintStart_toEndOf="@+id/weather_image"
            app:layout_constraintTop_toBottomOf="@+id/Description_textView"
            app:layout_constraintVertical_bias="1.0"
            tools:text="34Â°C" />

        <TextView
            android:id="@+id/Date_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="14sp"
            app:Description="@{weather}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/weather_image"
            tools:text="Thunderstorm with light rain" />

        <TextView
            android:id="@+id/Description_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp"
            app:date="@{weather}"
            app:layout_constraintBottom_toTopOf="@+id/Temprature_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.61"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="6-24-2020" />

        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="59dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:contentDescription="@string/CurrentWeather_head"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Description_textView"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.592"
            app:weatherIcon="@{weather}"
            tools:srcCompat="@drawable/c01d" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>